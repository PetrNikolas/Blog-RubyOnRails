<!-- Home Posts -->
<div class="home-posts">
  <div class="centring">
    <section>
      <p id="notice"><%= notice %></p>

      <h1>
        <%= @post.name %>
      </h1>

      <p>
        <small>
          <strong><%= @post.title %></strong>
        </small>
      </p>
    </section>
  </div>
</div>
<!-- Cancel Home Posts -->

<!-- Posts -->
<div class="posts">
  <div class="centring">
    <section>
      <article>
        <p>
          <%= @post.content %>
        </p>

        <hr>
        <p>
          <%= link_to 'Edit', edit_post_path(@post) %>
          |
          <%= link_to 'Back', posts_path %>
        </p>
      </article>
    </section>
  </div>
</div>
<!-- Cancel Posts -->
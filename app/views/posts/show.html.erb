<!-- Home Posts -->
<section class="home-posts">
  <div class="row">
    <h1>
      <%= @post.name %>
    </h1>
    <p>
      <small><%= join_tags(@post) %></small>
    </p>

  </div>
</section>
<!-- Cancel Home Posts -->

<div class="row">
  <div class="small-12 large-12 columns">
    <!-- Posts -->
    <section class="posts">
        <article>
          <p>
            <%= @post.content %>
          </p>
        </article>
    </section>
    <!-- Cancel Posts -->
  </div>

  <div class="small-12 large-12 columns">
    <section class="posts">
      <p>

        <% if user_signed_in? %>

            <%= link_to 'Edit', edit_post_path(@post) %>
            |
            <%= link_to 'Back', posts_path %>

        <% else %>

            <%= link_to 'ZpÄ›t', blog_index_path %>

        <% end %>
      </p>
    </section>
  </div>
</div>
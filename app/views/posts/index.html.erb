<!-- Home Posts -->
<section class="home-posts">
  <div class="centring">
      <h1>Blog's administration</h1>
  </div>
</section>
<!-- Cancel Home Posts -->

<!-- Posts -->
<section class="posts">
  <div class="center">
    <p id="notice"><%= notice %></p>

    <div class="panel-33">
      <div class="admin-nav">
        <div class="actions btn btn-new">
          <p>
            <i class="fa fa-pencil-square-o" aria-hidden="true"></i>&nbsp;
            <%= link_to 'New post', new_post_path %>
          </p>
        </div>

        <p>
          <i class="fa fa-cogs" aria-hidden="true"></i>&nbsp;
          <%= link_to 'User profile', edit_user_registration_path %>
        </p>

        <p>
          <a class="twitter-timeline" href="https://twitter.com/PetrNikolas" data-chrome="nofooter noheader" data-tweet-limit="3"></a><script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
        </p>
      </div>
    </div>

    <div class="panel-67">
      <% @posts.each do |post| %>
          <!-- Panel -->
          <div class="panel-33">
            <!-- Article -->
            <article class="article">
              <div class="post">
                <h2><%= post.name %></h2>
                <p>
                  <small><%= post.created_at.to_s(:short) %></small>
                </p>

                <p>
                  <%= link_to 'Detail', post %>
                  |
                  <%= link_to 'Edit', edit_post_path(post) %>
                  |
                  <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %>
                </p>
              </div>
            </article><!-- Cancel Article -->
          </div><!-- Cancel Panel -->
      <% end %>

      <div class="panel">
        <%= will_paginate @posts %>
      </div>
    </div>
    <div class="clean"></div>
  </div>
</section>
<!-- Cancel Posts -->
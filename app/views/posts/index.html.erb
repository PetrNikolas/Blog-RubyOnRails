<!-- Home Posts -->
<section class="home-posts">
  <div class="centring">
      <h1>Blog's administration</h1>
  </div>
</section>
<!-- Cancel Home Posts -->

<!-- Posts -->
<section class="posts">
  <div class="centring">
        <p id="notice"><%= notice %></p>

        <% @posts.each do |post| %>
          <!-- Panel -->
          <div class="panel-20">
            <!-- Article -->
            <article class="article">
              <div class="post">
                <h2><%= post.name %></h2>

                <p>
                  <%= link_to 'Show', post %>
                  |
                  <%= link_to 'Edit', edit_post_path(post) %>
                  |
                  <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
                </p>
              </div>
            </article><!-- Cancel Article -->
          </div><!-- Cancel Panel -->
        <% end %>
      <div class="clean"></div>

      <div class="actions btn btn-default">
        <p>
          <%= link_to 'New Post', new_post_path %>
        </p>
      </div>
  </div>
</section>
<!-- Cancel Posts -->